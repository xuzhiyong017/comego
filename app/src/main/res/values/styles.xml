<resources>


    <style name="GameGoBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- Application theme. -->
    <style name="GameGoAppTheme" parent="GameGoBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowBackground">@color/bg_common</item>
    </style>

    <style name="FullScreenTheme" parent="GameGoAppTheme">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="NoBgTheme" parent="GameGoAppTheme">
        <item name="android:windowBackground">@null</item>
    </style>




    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- merge from ME start -->
    <style name="Splitter">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/splitter</item>
    </style>

    <style name="GBottomDialogAnim" parent="android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/bottom_dialog_push_up_in</item>
        <item name="android:windowExitAnimation">@anim/bottom_dialog_push_down_out</item>
    </style>

    <style name="GBottomDialog" parent="GDialog">
        <item name="android:windowAnimationStyle">@style/GBottomDialogAnim</item>
    </style>

    <style name="GDialog" parent="@android:style/Theme.Light">
        <item name="android:windowBackground">@drawable/background_dialog</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
</resources>
