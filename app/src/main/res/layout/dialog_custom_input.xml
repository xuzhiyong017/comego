<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="314dip"
              android:layout_height="wrap_content"
              android:background="@drawable/background_gcustom_dialog"
              android:orientation="vertical" >

    <TextView
        android:id="@+id/dgcdu_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:height="40dip"
        android:textColor="#616060"
        android:textSize="18sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.33dp"
        android:background="@drawable/line_gcustom_dialog_horizontal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/dgcdu_input"
            android:layout_width="match_parent"
            android:layout_height="94dp"
            android:background="@drawable/background_gcustom_dialog"
            android:gravity="top"
            android:hint=""
            android:maxLength="150"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:scrollbars="vertical"
            android:singleLine="false"
            android:textColor="#616060"
            android:textColorHint="#cccccc"
            android:textSize="15sp" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="53dip" >

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.3dip"
            android:layout_alignParentTop="true"
            android:background="@drawable/line_gcustom_dialog_horizontal" />

        <View
            android:id="@+id/dgs_vertical_line"
            android:layout_width="0.33dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:background="@drawable/line_gcustom_dialog_vertical" />

        <TextView
            android:id="@+id/dgcdu_left_btn"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_toLeftOf="@id/dgs_vertical_line"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="#42acff"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/dgcdu_right_btn"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_toRightOf="@id/dgs_vertical_line"
            android:gravity="center"
            android:text="@string/confirm"
            android:textColor="#42acff"
            android:textSize="18sp" />
    </RelativeLayout>

</LinearLayout>